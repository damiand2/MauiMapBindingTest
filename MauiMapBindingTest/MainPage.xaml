<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMapBindingTest.MainPage"
             xmlns:maps="clr-namespace:Maui.GoogleMaps;assembly=Maui.GoogleMaps">

    <ScrollView>
        <StackLayout>
            <maps:Map VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" x:Name="map" InitialCameraUpdate="50.074, 14.437" />
            <Button Text="Cluster" Clicked="OnCLusterClicked" />

        </StackLayout>
        
    </ScrollView>

</ContentPage>

